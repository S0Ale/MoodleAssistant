@model MainModel

<div class="flex justify-center p-6 border-t border-zinc-200">
    <div class="flex flex-row debug1 w-full overflow-x-auto justify-center">
        <div class="border rounded border-zinc-300 overflow-hidden">
            <div class="py-3 px-6 text-center">
                @Html.Raw(Model.XmlModel.GetFormattedQuestionText())
            </div>
            <div class="border-t border-zinc-300 py-3 px-6 text-center">
                @Html.Raw(Model.XmlModel.GetFormattedAnswers())
            </div>
        </div>
    </div>
</div>
