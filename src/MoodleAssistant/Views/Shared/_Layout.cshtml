<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoodleAssistant</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="border-b border-zinc-300">
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between">

                    <div class="flex space-x-4">
                        <!-- logo -->
                        <div>
                            <a href="#" class="flex items-center py-5 text-2xl text-slate-700 hover:text-slate-900">
                                <span class="">MoodleAssistant</span>
                            </a>
                        </div>

                        <!-- primary nav -->
                        <div class="hidden md:flex items-center space-x-1">
                            <a href="#" class="py-5 px-3 text-slate-500 hover:text-slate-700">Home</a>
                            <a href="#" class="py-5 px-3 text-slate-500 hover:text-slate-700">Expand a question</a>
                            <a href="#" class="py-5 px-3 text-slate-500 hover:text-slate-700">Tutorial</a>
                        </div>
                    </div>

                    <!-- mobile button goes here -->
                    <div class="md:hidden flex items-center">
                        <button class="mobile-menu-button">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>

                </div>
            </div>

            <!-- mobile menu -->
            <div class="mobile-menu hidden md:hidden">
                <a href="#" class="block py-2 px-4 text-slate-500 hover:bg-slay-200">Home</a>
                <a href="#" class="block py-2 px-4 text-slate-500 hover:bg-slay-200">Expand a question</a>
                <a href="#" class="block py-2 px-4 text-slate-500 hover:bg-slay-200">Tutorial</a>
            </div>
        </nav>
    </header>
    <main class="w-full">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
