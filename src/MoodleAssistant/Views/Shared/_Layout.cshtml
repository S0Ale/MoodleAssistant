@using MoodleAssistant.Utils
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoodleAssistant</title>
    <!--For development
    <script src="https://cdn.tailwindcss.com"></script> -->

    <!--But I need layer directives-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=close" />
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="border-b border-zinc-200">
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between">

                    <div class="flex space-x-4">
                        <!-- logo -->
                        <div>
                            <span class="flex items-center py-5 text-2xl text-gray-700 hover:text-gray-900">
                                MoodleAssistant
                            </span>
                        </div>

                        <!-- primary nav -->
                        <div class="hidden md:flex items-center space-x-1">
                            <a asp-controller="Home" asp-action="Index" class="py-5 px-3 text-gray-500 hover:text-gray-700">Home</a>
                            <a asp-controller="Replicator" asp-action="Index" class="py-5 px-3 text-gray-500 hover:text-gray-700">Expand a question</a>
                            <a asp-controller="Home" asp-action="Tutorial" class="py-5 px-3 text-gray-500 hover:text-gray-700">Tutorial</a>
                        </div>
                    </div>

                    <!-- mobile button goes here -->
                    <div class="md:hidden flex items-center">
                        <button class="mobile-menu-button">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>

                </div>
            </div>

            <!-- mobile menu -->
            <div class="mobile-menu hidden md:hidden">
                <a asp-controller="Home" asp-action="Index" class="block py-2 px-4 text-slate-500 hover:bg-slay-200">Home</a>
                <a asp-controller="Replicator" asp-action="Index" class="block py-2 px-4 text-slate-500 hover:bg-slay-200">Expand a question</a>
                <a asp-controller="Home" asp-action="Tutorial" class="block py-2 px-4 text-slate-500 hover:bg-slay-200">Tutorial</a>
            </div>
        </nav>
    </header>
    <main class="w-full">
        @RenderBody()
    </main>
    <footer class="w-full border-t border-zinc-200">
        <div class="text-center w-full text-gray-500">
            &copy; 2024 - MoodleAssistant
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @Html.RenderPartialSectionScripts()
</body>
</html>
