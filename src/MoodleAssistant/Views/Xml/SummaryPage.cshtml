@using System.Text.Json
@model UploadXmlFileModel
@{
    ViewData["Title"] = "Summary Page";
    var questiontextContainer = Model.GetFormattedQuestionText();
    var answerContainer = Model.GetFormattedAnswers();
}
<div class="text-center">
    <div class="card mt-md-5 mt-1">
        <div class="card-header">
            <h4>Your Question</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Html.Raw(questiontextContainer)</h5>
        </div>
    </div>
    <div class="card mt-md-5 mt-1">
        <div class="card-header">
            <h4>Answers</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Html.Raw(answerContainer)</h5>
        </div>
    </div>
    <div class="container mt-md-5 mt-1">
        <div class="row">
            <div class="col-md-6">
                <div class="offset-md-2 col-md-8">
                    <a asp-controller="Xml" asp-action="Upload">
                        <input type="button" id="return-to-upload" class="btn btn-outline-secondary btn-block" value="Return to upload"/>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="offset-md-2 col-md-8">
                    <form asp-controller="Csv" asp-action="Upload" method="post">
                        <input type="hidden" name="firstAccess" value="true"/>
                        <input type="submit" id="upload-csv" class="btn btn-outline-primary btn-block" value="Upload CSV answers" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
